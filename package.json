{
  "name": "personal-site",
  "version": "1.0.0",
  "homepage": "https://davidsass.eu/",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sassdavid/personal-site.git"
  },
  "engines": {
    "node": ">=16.x"
  },
  "scripts": {
    "build": "rimraf ./build && react-scripts build",
    "predeploy": "npm run build && react-snap",
    "deploy": "gh-pages -d build",
    "start": "react-scripts start",
    "lint": "eslint $(git ls-files '*.js') src --fix",
    "test": "npx jest",
    "analyze": "npm run build && source-map-explorer build/static/js/*.chunk.js"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.4.0",
    "@fortawesome/free-brands-svg-icons": "^6.4.0",
    "@fortawesome/free-regular-svg-icons": "^6.4.0",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "dayjs": "^1.11.7",
    "gh-pages": "^5.0.0",
    "markdown-to-jsx": "^7.2.0",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-burger-menu": "^3.0.9",
    "react-dom": "^18.2.0",
    "react-ga4": "^2.1.0",
    "react-helmet-async": "^1.3.0",
    "react-router-dom": "^6.10.0",
    "styled-components": "^5.3.9",
    "use-dark-mode": "^2.3.1"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.21.3",
    "@babel/preset-env": "^7.21.4",
    "@babel/preset-react": "^7.18.6",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "babel-jest": "^29.5.0",
    "babel-plugin-macros": "3.1.0",
    "eslint": "^8.38.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "react-scripts": "^5.0.1",
    "react-snap": "^1.23.0",
    "rimraf": "^5.0.0",
    "sass": "^1.62.0",
    "source-map-explorer": "^2.5.3"
  },
  "overrides": {
    "use-dark-mode": {
      "react": "^17.0.0 || ^18.0.0"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
