    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-burger-menu": "^2.8.7",
    "@types/react-dom": "^19.2.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "postcss-normalize": "^13.0.1",
    "prettier": "^3.6.2",
    "sass": "^1.94.2",
    "typescript": "^5.9.3"
  }
